---

- name: Download kibana
  get_url:
    url: https://artifacts.elastic.co/downloads/kibana/kibana-5.4.0-amd64.deb
    dest: /tmp/kibana-5.4.0-amd64.deb
  when: ansible_os_family == 'Debian'
  
- name: install kibana
  apt:
    deb: /tmp/kibana-5.4.0-amd64.deb
  when: ansible_os_family == 'Debian'

